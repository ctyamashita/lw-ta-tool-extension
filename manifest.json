{
    "name": "Le Wagon TA tools - BETA",
    "version": "1.4",
    "description": "THIS EXTENSION IS FOR BETA TESTING",
    "manifest_version": 3,
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "background": {
        "service_worker": "service_worker.js",
        "type": "module"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "*://kitt.lewagon.com/*"
    ],
    "action": {
        "default_title": "TA extension",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://kitt.lewagon.com/*"],
            "js": ["scripts/copyCSS.js"]
        },
        {
            "matches": ["https://kitt.lewagon.com/camps/*/tickets"],
            "js": ["scripts/autoOnAfterBreak.js", "scripts/hideWott.js"]
        }
    ]
}